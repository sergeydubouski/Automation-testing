<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="NegativeLoginPageTestSuite" verbose="1"
	parallel="tests" thread-count="4">
	<test name="NegativeUSERNAMETest-CH">
		<parameter name="browser" value="chrome" />
		<parameter name="username" value="USERNAME IS INVALID" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedErrMsgForInvalidLogin"
			value="Your username is invalid!" />
		<classes>
			<class
				name="com.heroku.theinternet.loginpagetests.NegativeLoginPageTest" />
		</classes>
	</test>
	<test name="NegativeUSERNAMETest-FF">
		<parameter name="browser" value="firefox" />
		<parameter name="username" value="USERNAME IS INVALID" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedErrMsgForInvalidLogin"
			value="Your username is invalid!" />
		<classes>
			<class
				name="com.heroku.theinternet.loginpagetests.NegativeLoginPageTest" />
		</classes>
	</test>
	<test name="NegativePASSWORDTest-CH">
		<parameter name="browser" value="chrome" />
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="PASSWORD IS INVALID" />
		<parameter name="expectedErrMsgForInvalidLogin"
			value="Your password is invalid!" />
		<classes>
			<class
				name="com.heroku.theinternet.loginpagetests.NegativeLoginPageTest" />
		</classes>
	</test>
	<test name="NegativePASSWORDTest-FF">
		<parameter name="browser" value="firefox" />
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="PASSWORD IS INVALID" />
		<parameter name="expectedErrMsgForInvalidLogin"
			value="Your password is invalid!" />
		<classes>
			<class
				name="com.heroku.theinternet.loginpagetests.NegativeLoginPageTest" />
		</classes>
	</test>
</suite>